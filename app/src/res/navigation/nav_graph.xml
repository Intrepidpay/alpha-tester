<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/dashboardFragment">

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.example.aichatassistant.ui.DashboardFragment"
        android:label="Dashboard"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_to_profileEditor"
            app:destination="@id/profileEditorFragment" />
    </fragment>
    
    <fragment
        android:id="@+id/profileEditorFragment"
        android:name="com.example.aichatassistant.ui.ProfileEditorFragment"
        android:label="Edit Profile"
        tools:layout="@layout/fragment_profile_editor" />
</navigation>